<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorLightGray"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30"
            android:gravity="center">

            <ImageView
                android:id="@+id/fragment_playcap_bigImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />


            <ImageView
                android:id="@+id/fragment_playcap_smallImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <ImageButton
                    android:id="@+id/fragment_playcap_addfavorito"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/ico_heart"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:background="@color/colorTransparent"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>


                <ImageButton
                    android:id="@+id/fragment_playcap_share"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/ico_share"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:background="@color/colorTransparent"/>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:orientation="vertical"
            android:background="@color/colorLightGray"
            android:weightSum="1">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.5"
               android:orientation="horizontal"
               android:gravity="center_horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/NormalBlackField"
    android:text="Autor"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/NormalBlackBigField"
                    android:text="Capitulo"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:orientation="horizontal"
            android:background="@color/colorLightGray"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/fragment_playcap_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ico_prev"
                    android:background="@color/colorTransparent"
                    android:padding="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/fragment_playcap_fw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ico_fw"
                    android:background="@color/colorTransparent"
                    android:padding="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/fragment_playcap_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:background="@color/colorTransparent"
                    android:src="@drawable/ico_purpleplaybig"
                    android:padding="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/fragment_playcap_tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ico_tempo"
                    android:padding="15dp"
                    android:background="@color/colorTransparent"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/fragment_playcap_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ico_next"
                    android:padding="15dp"
                    android:background="@color/colorTransparent"
                    />
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorLightGray"
            android:layout_weight="0.02">

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@color/colorLightGray"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <SeekBar
            android:id="@+id/fragment_playcap_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/colorBlack"
            android:thumb="@drawable/custom_seekbar1"
            android:progressBackgroundTint="@color/colorGray"/>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:background="@color/colorLightGray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NormalBlackField"
                android:text="Subtiulo"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:background="@color/colorLightGray"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/fragment_playcap_caps"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:src="@drawable/ico_caps"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:background="@color/colorTransparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="capitulos"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/fragment_playcap_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:src="@drawable/ico_bookmark_dark"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:background="@color/colorTransparent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="capitulos"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>