<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="audu.app.fragments.avatar">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NormalBlackBigField"
                android:text="Selecciona tu Avatar"/>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <LinearLayout
            android:id="@+id/pnlSlider"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:orientation="horizontal">
            <!-- TODO: Update blank fragment layout -->
            <android.support.v4.view.ViewPager
                android:id="@+id/fragment_avatar_ViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <audu.app.utils.BoxIndicator2
                android:id="@+id/fragment_avatar_BoxIndicator"
                android:layout_width="match_parent"
                android:layout_height="20dp"
               />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:text="CAMBIAR"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/purple_button"
                android:id="@+id/fragment_avatar_cambiar"/>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>
